{##
 # Express checkout
 #}
<div class="top-message pp-button">

  <div class="message">
    {{ t('Product has been added to cart') }}
  </div>

  <a href="{{ this.getLocationURL() }}" onclick="paypalExpressCheckout(this)" class="{{ this.getClass() }}"{% if this.getId() %} id="{{ this.getId() }}"{% endif %}{% if this.hasMerchantId() %} data-paypal-id="{{ this.getMerchantId() }}"{% endif %}>
    <img src="https://www.paypalobjects.com/webstatic/en_US/i/buttons/checkout-logo-small.png" alt="Check out with PayPal" />
  </a>
</div>
